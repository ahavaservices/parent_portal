<p id="notice"><%= notice %></p>

<h1>Listing Programs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Sort order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @programs.each do |program| %>
      <tr>
        <td><%= program.name %></td>
        <td><%= program.sort_order %></td>
        <td><%= link_to 'Show',  admin_program_path(program) %></td>
        <td><%= link_to 'Edit',  edit_admin_program_path(program) %></td>
        <td><%= button_to 'Destroy', admin_program_path(program), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Program',  new_admin_program_path%>
