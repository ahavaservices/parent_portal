<p id="notice"><%= notice %></p>

<h1>Listing Staffs</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Title</th>
      <th>Hire date</th>
      <th>Release date</th>
      <th>User</th>
      <th>Phone no1</th>
      <th>Phone no2</th>
      <th>Address</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.first_name %></td>
        <td><%= staff.last_name %></td>
        <td><%= staff.title %></td>
        <td><%= staff.hire_date %></td>
        <td><%= staff.release_date %></td>
        <td><%= staff.user_id %></td>
        <td><%= staff.phone_no1 %></td>
        <td><%= staff.phone_no2 %></td>
        <td><%= staff.address_id %></td>
        <td><%= staff.status %></td>
        <td><%= link_to 'Show', admin_staff_path(staff) %></td>
        <td><%= link_to 'Edit', edit_admin_staff_path(staff) %></td>
        <td><%= button_to 'Destroy', admin_staff_path(staff), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

