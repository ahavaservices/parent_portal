
<%#= link_to 'New Student', new_student_path %>


 <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            Add Student
           <!-- <small>preview of simple tables</small>-->
          </h1>
        </section>

        <!-- Main content -->
        <section class="content">
        <div class="row">

<div class="col-md-12">
              <!-- general form elements -->
              <div class="box box-primary">
                <div class="box-header with-border">
                  <h3 class="box-title"></h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                <%= form_for(@student) do |f| %>
                  <div class="box-body">
                    <div class="form-group">
                      <label for="exampleInputEmail1">First Name</label>
                      <%= f.text_field :first_name, :placeholder => "First Name", :class => "form-control" %>
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Last Name</label>
                      <%= f.text_field :last_name, :placeholder => "Last Name", :class => "form-control" %>
                    </div>

                    <div class="form-group">
                      <label for="exampleInputPassword1">Gender</label>
                      <%= f.text_field :gender, :placeholder => "Gender", :class => "form-control" %>
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Date of birth</label>
                       <%= f.date_select :dob, order: [:month, :day, :year], start_year: 1995, end_year:Date.today.year, :class => "form-control" %>
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Grade</label>
                      <%= f.text_field :grade, :placeholder => "grade", :class => "form-control" %>
                    </div>

                  </div><!-- /.box-body -->

                  <div class="box-footer">
                    <%= f.submit "Submit", :class => "btn btn-primary" %>
                  </div>
                <%end%>
              </div><!-- /.box -->            

          </div>
          </div>
        </section><!-- /.content -->