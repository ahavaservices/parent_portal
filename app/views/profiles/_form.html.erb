<% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


      <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            User Profile
          </h1>
        </section>

        <!-- Main content -->
        <section class="content">
          <div class="row">
            <div class="col-md-12">
            <div class="box">
            <div class="box-header with-border">
            <h3 class="box-title">Basic Informations</h3>
            </div>
            <div class="box-body">
            <%= form_for @profile, :url => profile_path do |f| %>
            <div class="col-md-5">
            <h4>Registered Email</h4>
            <%= f.text_field :email, :value => current_user.email, :class => "form-control input-lg"%>
            <h4>First Name</h4>
            <%= f.text_field :first_name, :class => "form-control input-lg", :placeholder => "First Name"%>            
            <h4>Last Name</h4>
            <%= f.text_field :last_name, :class => "form-control input-lg", :placeholder => "Last Name"%>
            <br>
            </div>
            <div class="col-md-5">
            <h4>Phone No.</h4>
            <%= f.text_field :phone, :class => "form-control input-lg", :placeholder => "Phone No." %>
            <h4>Emergency Contact Name</h4>
            <%= f.text_field :emergency_contact_name, :class => "form-control input-lg", :placeholder => "Emergency Contact Name" %>
            <h4>Emergency Contact Number</h4>
            <%= f.text_field :emergency_contact_no,:class => "form-control input-lg", :placeholder => "Emergency Contact Number" %>
            <br>
            <div class="col-xs-30">
             <%= f.submit "Update",:class => "btn btn-success" %>
            </div>
            </div>
            <%end%>
            </div>
            </div>
          </div>
          </div><!--row 1 ends-->
